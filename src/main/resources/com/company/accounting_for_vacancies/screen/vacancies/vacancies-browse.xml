<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://vacanciesBrowse.caption"
        focusComponent="vacanciesesTable">
    <data readOnly="true">
        <collection id="vacanciesesDc"
                    class="com.company.accounting_for_vacancies.entity.Vacancies">
            <fetchPlan extends="_base">
                <property name="structuralEntity" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="vacanciesesDl">
                <query>
                    <![CDATA[select e from Vacancies e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="vacanciesesTable" spacing="true">
        <filter id="filter"
                dataLoader="vacanciesesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="vacanciesesTable"
                    width="100%"
                    dataContainer="vacanciesesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="startDate"/>
                <column id="endDate"/>
                <column id="name"/>
                <column id="description"/>
                <column id="skills"/>
                <column id="structuralEntity"/>
                <column id="resume"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="vacanciesesTable.create"/>
                <button id="editBtn" action="vacanciesesTable.edit"/>
                <button id="removeBtn" action="vacanciesesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
