<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="accounting_for_vacancies">
        <createTable tableName="VACANCIES">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_VACANCIES"/>
            </column>
            <column name="START_DATE" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="END_DATE" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="VARCHAR(255)"/>
            <column name="SKILLS" type="VARCHAR(255)"/>
            <column name="STRUCTURAL_ENTITY_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="RESUME" type="VARCHAR(1024)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="accounting_for_vacancies">
        <createIndex indexName="IDX_VACANCIES_STRUCTURAL_ENTITY" tableName="VACANCIES">
            <column name="STRUCTURAL_ENTITY_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="STRUCTURAL_ENTITY_ID" baseTableName="VACANCIES"
                                 constraintName="FK_VACANCIES_ON_STRUCTURAL_ENTITY" referencedColumnNames="ID"
                                 referencedTableName="STRUCTURAL_UNIT"/>
    </changeSet>
    <changeSet id="3" author="accounting_for_vacancies">
        <dropForeignKeyConstraint baseTableName="vacancy" constraintName="fk_vacancy_on_structural_unit"/>
    </changeSet>
    <changeSet id="4" author="accounting_for_vacancies">
        <dropTable cascadeConstraints="true" tableName="vacancy"/>
    </changeSet>
</databaseChangeLog>